<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/view_wallet_card_root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height= "match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/top_guideline"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.13" />

            <android.support.constraint.Guideline
                android:id="@+id/bottom_guideline"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.87" />

            <android.support.constraint.Guideline
                android:id="@+id/left_guideline"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03" />

            <android.support.constraint.Guideline
                android:id="@+id/right_guideline"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.97" />

            <ImageView
                android:id="@+id/iv_wallet_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginVertical="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toTopOf="@id/bottom_guideline"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintLeft_toRightOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/top_guideline" />

            <TextView
                android:id="@+id/tv_wallet_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="테스트용 지갑"
                app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                app:layout_constraintStart_toEndOf="@+id/iv_wallet_icon"
                app:layout_constraintTop_toTopOf="@+id/top_guideline" />

            <TextView
                android:id="@+id/tv_wallet_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="7dp"
                android:textSize="11dp"
                android:text="ETH"
                app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
                app:layout_constraintStart_toEndOf="@+id/iv_wallet_icon" />

            <TextView
                android:id="@+id/tv_wallet_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="3dp"
                android:textSize="13dp"
                android:text="3321.32131415"
                app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
                app:layout_constraintStart_toEndOf="@+id/tv_wallet_symbol" />


            <TextView
                android:id="@+id/tv_wallet_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="3dp"
                android:textSize="11dp"
                android:text="KRW"
                app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
                app:layout_constraintEnd_toStartOf="@+id/tv_wallet_exchange_balance" />

            <TextView
                android:id="@+id/tv_wallet_exchange_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="7dp"
                android:textSize="13dp"
                android:text="3321,3213,1415"
                app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
                app:layout_constraintEnd_toStartOf="@+id/right_guideline" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>