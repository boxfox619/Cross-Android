<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".presentation.wallet.manage.info.WalletInfoEditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_wallet_info_edit_coin_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="지갑정보"
                android:textColor="@color/colorAccentDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="지갑 이름을 입력해 주세요"
                android:textColor="#555555"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_wallet_info_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_edittext_background"
                android:padding="7dp"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="지갑에 대한 설명을 입력해 주세요"
                android:textColor="#555555"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_wallet_info_edit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/border_edittext_background"
                android:padding="7dp"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="보안"
                android:textColor="@color/colorAccentDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="비밀번호"
                android:textColor="#555555"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_wallet_info_edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_edittext_background"
                android:inputType="textPassword"
                android:padding="7dp"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="비밀번호 확인"
                android:textColor="#555555"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_wallet_info_edit_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/border_edittext_background"
                android:inputType="textPassword"
                android:padding="7dp"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox_wallet_info_edit_wallet_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지갑 정보 공개"
                    android:textSize="13dp" />

                <CheckBox
                    android:id="@+id/checkbox_wallet_info_edit_owner_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소유자 정보 공개"
                    android:textSize="13dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="추가 보안"
                android:textColor="@color/colorAccentDark" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_wallet_info_edit_secure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <view
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:id="@+id/layout_wallet_secure_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="핀 번호"
                    android:textColor="#555555"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/et_wallet_info_edit_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/border_edittext_background"
                    android:inputType="numberPassword"
                    android:padding="7dp"
                    android:textSize="14dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="핀 번호 확인"
                    android:textColor="#555555"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/et_cwallet_info_edit_pin_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/border_edittext_background"
                    android:inputType="numberPassword"
                    android:padding="7dp"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_wallet_info_edit"
            android:layout_marginRight="10dp"
            android:text="지갑 생성하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>